<Window x:Class="WpfApp2.WindowEditAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="WindowEditAuthor" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="176.16"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Имя:" Grid.Column="0" VerticalAlignment="Center" Height="16"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5,5,5,5" Padding="5"/>

        <TextBlock Text="Фамилия:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Height="16"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="1" Grid.Column="1" Margin="5,5,5,5" Padding="5"/>

        <TextBlock Text="Дата рождения:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Height="16"/>
        <DatePicker x:Name="BirthDatePicker" Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" Padding="5"/>

        <TextBlock Text="Страна:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Height="16"/>
        <TextBox x:Name="CountryTextBox" Grid.Row="3" Grid.Column="1" Margin="5,5,5,5" Padding="5"/>

        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" Grid.Column="1" Width="220">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Height="30" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="100" Height="30" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
