<Window x:Class="WpfApp2.WindowBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowBook" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="TitleTextBlock" Grid.Row="0" Grid.ColumnSpan="2" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Название:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Height="25"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Год:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="YearTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Height="25"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="ISBN:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="IsbnTextBox" Grid.Row="3" Grid.Column="1" Margin="5" Height="25"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Количество:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="QuantityTextBox" Grid.Row="4" Grid.Column="1" Margin="5" Height="25"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Автор:" VerticalAlignment="Center" Margin="5"/>
        <ComboBox x:Name="AuthorComboBox" Grid.Row="5" Grid.Column="1" Margin="5" Height="25"
                  DisplayMemberPath="FullName" SelectedValuePath="Id"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Жанры:" VerticalAlignment="Top" Margin="5"/>
        <ListBox x:Name="GenresListBox" Grid.Row="6" Grid.Column="1" Margin="5" Height="100"
                 DisplayMemberPath="Name" SelectionMode="Multiple"/>
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button x:Name="SaveButton" Content="Сохранить" Width="80" Height="30" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="80" Height="30" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>